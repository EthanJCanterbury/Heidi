modules = ["nodejs-20"]
run = "npm run start"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run start"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 17724980
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun src/index.ts"

[[workflows.workflow]]
name = "Debug Slack"
author = 17724980
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun src/utils/debug-slack.ts"

[[ports]]
localPort = 3000
externalPort = 80
