{
  "display_information": {
    "name": "Heidi",
    "description": "Looking for trash...",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "Heidi",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/h-id",
        "description": "Get IDs of users, channels, or usergroups",
        "usage_hint": "@username #channel",
        "should_escape": true
      },
      {
        "command": "/h-channel",
        "description": "Send @channel message disguised as the user",
        "usage_hint": "Your message here",
        "should_escape": false
      },
      {
        "command": "/h-ask",
        "description": "Ask AI a question",
        "usage_hint": "Your question here",
        "should_escape": false
      },
      {
        "command": "/h-purge",
        "description": "Purge messages from channel",
        "usage_hint": "number",
        "should_escape": false
      },
      {
        "command": "/h-admin-add",
        "description": "Add a user to the admin list",
        "usage_hint": "@username or user ID",
        "should_escape": false
      },
      {
        "command": "/h-email",
        "description": "Get email of a user",
        "usage_hint": "@username",
        "should_escape": true
      },
      {
        "command": "/h-poll",
        "description": "Create an interactive poll with voting buttons",
        "usage_hint": "What's your favorite color? | Red | Blue | Green",
        "should_escape": false
      }
    ]
  },
