{
  "display_information": {
    "name": "Heidi",
    "description": "Looking for trash...",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "Hedi",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/h-id",
        "description": "Get IDs of users, channels, or usergroups",
        "usage_hint": "@username #channel",
        "should_escape": true
      },
      {
        "command": "/h-channel",
        "description": "Send @channel message disguised as the user",
        "usage_hint": "Your message here",
        "should_escape": false
      },
      {
        "command": "/h-ask",
        "description": "Ask AI a question",
        "usage_hint": "Your question here",
        "should_escape": false
      },
      {
        "command": "/h-purge",
        "description": "Purge messages from channel",
        "usage_hint": "number",
        "should_escape": false
      },
      {
        "command": "/h-admin-add",
        "description": "Add a user to the admin list",
        "usage_hint": "@username or user ID",
        "should_escape": false
      },
      {
        "command": "/h-email",
        "description": "Get email of a user",
        "usage_hint": "@username",
        "should_escape": true
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "channels:join",
        "channels:manage",
        "channels:read",
        "chat:write",
        "chat:write.customize",
        "chat:write.public",
        "commands",
        "groups:history",
        "groups:read",
        "groups:write",
        "im:write",
        "reactions:write",
        "usergroups:read",
        "usergroups:write",
        "users:read",
        "users:read.email",
        "emoji:read",
        "pins:read",
        "pins:write",
        "reactions:read"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
